<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/poi_layout_height"
    android:background="@drawable/poi_row"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/poi_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/idDebug"
            android:layout_marginLeft="@dimen/margin_left_poi_row"
            android:textSize="24dp"
            style="@style/StandardText"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titolDebug"
                android:layout_marginLeft="@dimen/margin_left_poi_row"
                android:textStyle="bold"
                style="@style/StandardText"/>


            <TextView
                android:id="@+id/poi_geo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geoDebug"
                android:layout_marginLeft="@dimen/margin_left_poi_row"
                style="@style/StandardText"/>

        </LinearLayout>


    </LinearLayout>

    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@android:drawable/ic_menu_info_details"
        android:layout_marginEnd="16dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignParentEnd="true" />

</RelativeLayout>