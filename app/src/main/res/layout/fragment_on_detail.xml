<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a685559.poi.OnDetailActivity"
    android:background="@drawable/silueta_sagrada_familia"
    android:backgroundTint="@color/Wheat">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="title"
                    android:id="@+id/detailPoiTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    style="@style/onDetailTitle"
                    android:layout_marginTop="@dimen/marginOnDetailTop" />

                <TextView
                    android:text="Adreça"
                    android:id="@+id/addressSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailPoiTitle"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/marginOnDetailSides"
                    style="@style/onDetailSubTitle" />

                <TextView
                    android:text="adress"
                    android:id="@+id/detailPoiAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addressSubTitle"
                    android:layout_marginLeft="@dimen/marginOnDetailSides"
                    style="@style/StandardText" />


                <TextView
                    android:text="Transport"
                    android:id="@+id/transportSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailPoiAddress"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="@dimen/marginOnDetailSides"
                    style="@style/onDetailSubTitle" />

                <TextView
                    android:text="transport"
                    android:id="@+id/detailPoiTransport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/transportSubTitle"
                    android:layout_marginLeft="@dimen/marginOnDetailSides"
                    style="@style/StandardText" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_below="@+id/detailPoiTransport">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/Widget.CardContent">

                        <TextView
                            android:text="Descripció:"
                            android:id="@+id/descriptionSubTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="@dimen/marginOnDetailSides"
                            style="@style/onDetailSubTitle" />

                        <TextView
                            android:text="description"
                            android:id="@+id/detailPoiDescr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/descriptionSubTitle"
                            android:layout_marginLeft="@dimen/marginOnDetailSides"
                            android:layout_marginRight="@dimen/marginOnDetailSides"
                            android:layout_gravity="center_vertical|right"
                            style="@style/StandardText" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <TextView
                    android:text="email"
                    android:id="@+id/detailPoiEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/marginOnDetailSides"
                    android:gravity="right"
                    android:padding="4dp"
                    android:autoLink="email|web|phone"
                    android:textColorLink="@color/DarkBlue"/>

                <TextView
                    android:text="telephone"
                    android:id="@+id/detailPoiTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/detailPoiEmail"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="@dimen/marginOnDetailSides"
                    android:gravity="right"
                    android:padding="4dp"
                    android:autoLink="email|web|phone"
                    android:textColorLink="@color/DarkBlue"/>

            </RelativeLayout>

        </ScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:id="@+id/loadingPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/DarkBlue"/>

    </RelativeLayout>

</RelativeLayout>
